<Window x:Class="WinCopies.GUI.Samples.CopyTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinCopies.GUI.Samples"
        mc:Ignorable="d"
        Title="CopyTest" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ToolBar>
            <Button Click="Button_Click">+</Button>
            <Button Click="Button_Click_1">Clear</Button>
        </ToolBar>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Items}" />
    </Grid>
</Window>
