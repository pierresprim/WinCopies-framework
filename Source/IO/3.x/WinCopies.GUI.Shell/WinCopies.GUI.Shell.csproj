<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<PackageId>WinCopies.GUI.Shell</PackageId>
		<AssemblyName>WinCopies.GUI.Shell</AssemblyName>
		<RootNamespace>WinCopies.GUI.Shell</RootNamespace>
		<TargetFrameworks>netcoreapp3.1;net5.0-windows;net6.0-windows;net472;net48</TargetFrameworks>
		<UseWPF>true</UseWPF>
		<DocumentationFile>WinCopies.GUI.Shell.xml</DocumentationFile>
		<DefineConstants>WinCopies2;WinCopies3;ProcessesWork;$(DefineConstants)</DefineConstants>
		<SignAssembly>true</SignAssembly>
		<AssemblyOriginatorKeyFile>WinCopies.GUI.Shell.snk</AssemblyOriginatorKeyFile>
		<VersionPrefix>3.12</VersionPrefix>
		<VersionSuffix>preview</VersionSuffix>
		<AssemblyVersion>3.12</AssemblyVersion>
		<FileVersion>3.12</FileVersion>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="WinCopies.Util" Version="3.16-preview" />
		<PackageReference Include="WinCopies.Util.Desktop" Version="3.16-preview" />

		<PackageReference Include="Squid-Box.SevenZipSharp" Version="1.2.231" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\GUI\3.x\WinCopies.GUI.Templates\WinCopies.GUI.Templates.csproj" />
		<ProjectReference Include="..\WinCopies.GUI.IO\WinCopies.GUI.IO.csproj" />
		<ProjectReference Include="..\WinCopies.IO.Shell\WinCopies.IO.Shell.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\..\LICENSE.md">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
		<None Include="..\..\WinCopies.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Resources\ExceptionMessages.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>ExceptionMessages.resx</DependentUpon>
		</Compile>
		<Compile Update="Properties\Resources.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>Resources.resx</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Update="Resources\ExceptionMessages.resx">
			<Generator>ResXFileCodeGenerator</Generator>
			<LastGenOutput>ExceptionMessages.Designer.cs</LastGenOutput>
		</EmbeddedResource>
		<EmbeddedResource Update="Properties\Resources.resx">
			<Generator>PublicResXFileCodeGenerator</Generator>
			<LastGenOutput>Resources.Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
		<Page Update="Themes\Generic.xaml">
			<XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
			<SubType>Designer</SubType>
		</Page>
	</ItemGroup>

	<Import Project="..\..\Shared\WinCopies.GUI.Shell.Shared\WinCopies.GUI.Shell.Shared.projitems" Label="Shared" />

</Project>
