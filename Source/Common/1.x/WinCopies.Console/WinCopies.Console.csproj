<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<PackageId>WinCopies.Console</PackageId>
		<TargetFrameworks>netcoreapp3.0;netcoreapp3.1;net5.0-windows;net6.0-windows;net7.0-windows;net8.0-windows;net472;net48</TargetFrameworks>
		<TargetPlatformIdentifier>windows</TargetPlatformIdentifier>
		<VersionPrefix>3.1</VersionPrefix>
		<VersionSuffix>preview</VersionSuffix>
		<AssemblyVersion>3.1</AssemblyVersion>
		<FileVersion>3.1</FileVersion>
		<PackageTags>WinCopies, Console</PackageTags>
	</PropertyGroup>

	<Import Project="$(SolutionDir)\ExtraProperties.props" Condition="'$(Configuration)'=='Release'" />

	<ItemGroup Condition="!$(DefineConstants.Contains('CS8'))">
		<PackageReference Include="System.Collections.Immutable" Version="1.36" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="WinCopies.Collections" Version="3.21" />
		<PackageReference Include="WinCopies.WindowsAPICodePack.Shell" Version="3.11-preview" />
	</ItemGroup>

	<Import Project="..\..\Shared\WinCopies.Console.Shared\WinCopies.Console.Shared.projitems" Label="Shared" />

</Project>
